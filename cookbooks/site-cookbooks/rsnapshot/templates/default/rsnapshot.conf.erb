#
# Generated by Chef for <%= @node[:fqdn] %>
#

config_version	1.2
snapshot_root	<%= File.expand_path(@node[:rsnapshot][:root]) %>/

cmd_cp		/bin/cp
cmd_rm		/bin/rm
cmd_rsync	/usr/bin/rsync
cmd_logger	/usr/bin/logger

interval	hourly	6
interval	daily	7
interval	weekly	4
interval	monthly	3

lockfile	/var/run/rsnapshot.pid

# Since rsnapshot doesn't natively support including fragments from
# /etc/rsnapshot.d, we fake it with Chef.
<% @fragments_directory.children.each do |fragment| %>
<%= fragment.read.strip %>
<% end %>
